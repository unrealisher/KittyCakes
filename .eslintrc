{
    "env": {
        "browser": true,
        "es6": true,
        "node": 1
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": ["svelte3"],
    "extends": ["eslint:recommended"],
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "no-console": "error",
        "no-alert": "error",
        "quotes": [2, "single", { "avoidEscape": true }]
    }
}
